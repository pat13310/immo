<div class='row '>
	{{ form_start(paymentMethodForm) }}
	<div class='col-md-12'>
		<div class='form-floating'>
			{{ form_widget(paymentMethodForm.country) }}
			{{ form_errors(paymentMethodForm.country) }}
			{{ form_label(paymentMethodForm.country) }}
		</div>
	</div>
	<div class='col-md-12'>
		<label class="bold mb-2">Comment souhaitez-vous recevoir vos paiements ?</label>

		{% for child in paymentMethodForm.method %}
			<div class="card-option">
				<span>
					{% if child.vars.value == 'CB_EUR' %}
						<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 32 32" aria-hidden="true" role="presentation" focusable="false" style="display: block; height: 32px; width: 32px; fill: currentcolor;">
							<path d="M31 28v2H1v-2zM14.26 1.02a3 3 0 0 1 3.3-.12l.18.12 12.84 9.17a1 1 0 0 1-.47 1.8L30 12h-1v12h2v2H1v-2h2V12H2a1 1 0 0 1-.67-1.74l.09-.07zM7 12H5v12h2zm4 0H9v12h2zm4 0h-2v12h2zm4 0h-2v12h2zm4 0h-2v12h2zm4 0h-2v12h2zM16.58 2.64a1 1 0 0 0-1.05-.06l-.11.06L5.12 10h21.76z"></path>
						</svg>
					{% elseif child.vars.value == 'PayPal_EUR' %}
						<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 32 32" aria-hidden="true" role="presentation" focusable="false" style="display: block; height: 32px; width: 32px;">
							<path fill="#0079c1" d="m13.26 17.76.02-.1c.1-.34.39-.59.73-.64h2.17c3.36-.07 5.98-1.47 6.85-5.34l.05-.28.07-.36.04-.28.02-.27.02-.26v-.54l-.03-.26-.1-.49c.05.15.07.3.1.45l.02.27.02.25v.32l-.03.26-.06.55c.33.17.63.4.88.68.78.9.93 2.17.64 3.7-.7 3.55-3.02 4.84-6.02 4.9h-.71a.77.77 0 0 0-.74.56l-.03.1-.04.2-.6 3.84-.03.16a.77.77 0 0 1-.66.65h-3.31a.46.46 0 0 1-.46-.45v-.08z"></path>
							<path fill="#00457c" d="M17.6 6c2.13 0 3.8.45 4.71 1.5a3.85 3.85 0 0 1 .63.97c.28.65.36 1.38.25 2.3l-.04.27-.07.36c-.79 4.08-3.46 5.55-6.9 5.61h-2.05c-.4 0-.74.27-.85.65l-.02.1-.93 5.87h-3.8a.53.53 0 0 1-.53-.52v-.09l2.57-16.28c.07-.39.38-.69.77-.73l.1-.01z"></path>
						</svg>
					{% elseif child.vars.value == 'PayPal_USD' %}
						<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 32 32" aria-hidden="true" role="presentation" focusable="false" style="display: block; height: 32px; width: 32px;">
							<path fill="#0079c1" d="m13.26 17.76.02-.1c.1-.34.39-.59.73-.64h2.17c3.36-.07 5.98-1.47 6.85-5.34l.05-.28.07-.36.04-.28.02-.27.02-.26v-.54l-.03-.26-.1-.49c.05.15.07.3.1.45l.02.27.02.25v.32l-.03.26-.06.55c.33.17.63.4.88.68.78.9.93 2.17.64 3.7-.7 3.55-3.02 4.84-6.02 4.9h-.71a.77.77 0 0 0-.74.56l-.03.1-.04.2-.6 3.84-.03.16a.77.77 0 0 1-.66.65h-3.31a.46.46 0 0 1-.46-.45v-.08z"></path>
							<path fill="#00457c" d="M17.6 6c2.13 0 3.8.45 4.71 1.5a3.85 3.85 0 0 1 .63.97c.28.65.36 1.38.25 2.3l-.04.27-.07.36c-.79 4.08-3.46 5.55-6.9 5.61h-2.05c-.4 0-.74.27-.85.65l-.02.1-.93 5.87h-3.8a.53.53 0 0 1-.53-.52v-.09l2.57-16.28c.07-.39.38-.69.77-.73l.1-.01z"></path>
						</svg>
					{% endif %}
				</span>
				<span class="w-100 flex justify-content-between">
					<ul class="f-sm gray">
						<li class="bold black f-lg">{{ form_label(child) }}</li>
						{% if child.vars.value == 'CB_EUR' %}
							<li>1 jour ouvré
							</li>
							<li>Aucuns frais</li>
						{% elseif child.vars.value == 'PayPal_EUR' %}
							<li>1 jour ouvré
							</li>
							<li>Des frais Paypal peuvent s'appliquer</li>
						{% elseif child.vars.value == 'PayPal_USD' %}
							<li>1 jour ouvré
							</li>
							<li>Des frais Paypal peuvent s'appliquer</li>
						{% endif %}
					</ul>
				</span>
				<span class="form-check">
					{{ form_widget(child,{'attr': {'class':'form-check-input'}})  }}
				</span>
			</div>
		</div>
	{% endfor %}
</div>

<div>
	<button type='submit' class='col-3 btn btn-light p-3 mt-2 mb-4'>Continuer</button>
</div>
{{ form_end(paymentMethodForm) }}</div>
